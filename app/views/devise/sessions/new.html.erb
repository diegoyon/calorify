<section class="hero is-white is-halfheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">Login</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">Please login to proceed.</p>
        <div class="box">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-large", placeholder: "Your Email" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.password_field :password, autocomplete: "current-password", class: "input is-large", placeholder: "Your Password" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.label :remember_me, class: "checkbox" %>
                <%= f.check_box :remember_me %>
              </div>
            <% end %>

              <%= f.submit "Login", class: "button is-block is-info is-large is-fullwidth" %>

          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
